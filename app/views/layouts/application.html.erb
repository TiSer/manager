<!DOCTYPE html>
<html>
<head>
  <title>Manager</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<h1 id="head"><%= link_to('Manager', '/') %></h1>

<div id="left-column">
  <%= render_navigation %>

    <% if current_user %>
				You entered as <%= current_user.email %>. <%= link_to "Logout", destroy_user_session_path %>
			<% else %>
				<%= link_to "Login", new_user_session_path %> | <%= link_to "Registration", new_user_registration_path %>
		<% end %>
</div>
 <p id="notice"><%= notice %></p>

    <% if alert %>
    	<p id="error"><%= alert %></p>
    <% end %>
    <% if flash[:error] %>
    	<p id="error"><%= flash[:error] %></p>
    <% end %>

<div id="right-column">
  <%= yield %>
</div>

</body>
</html>
