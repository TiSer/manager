<!DOCTYPE html>
<html>
<head>
  <title>Manager</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'redbox', 'superfish' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'redbox' %>
  <%= javascript_include_tag "jquery-ui.min.js", "simplemodal.1.4.1.min.js" %>
  <%= yield :booking_js %>
  <%= yield :amount_js %>
  <%#= yield :milestone_bill_js %>
  <%= javascript_include_tag "superfish.js", "hoverIntent.js", "menu.js"  %>
  <%= yield :add_staff_js %>
  <%= csrf_meta_tag %>
</head>

<body>
<div id="header">
  <h1 class="head"><%= link_to('Manager', '/') %></h1>

  <div id="left-column">
    <%= render_navigation %>
   <br/>
      <div class="login_form">
        <% if current_user %>
				    You entered as <%= current_user.email %>. <%= link_to "Logout", destroy_user_session_path %>
			    <% else %>
				    <%= link_to "Login", new_user_session_path %> | <%= link_to "Registration", new_user_registration_path %>
		    <% end %>
      </div>
  </div>
</div>
 <p id="notice"><%= notice %></p>

    <% if alert %>
    	<p id="error"><%= alert %></p>
    <% end %>
    <% if flash[:error] %>
    	<p id="error"><%= flash[:error] %></p>
    <% end %>

<div id="right-column">
  <%= yield %>
</div>

</body>
</html>

