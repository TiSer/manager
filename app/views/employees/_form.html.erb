<%= form_for(@employee) do |f| %>

	<%= f.error_messages %>

  <div class="field">
  <b><%= f.label  :department %><br />
    <%= f.select :department_id, @departments %>
  </div>
  <table><td>
	  <b>Skills:</b><br/>
	  <% for skill in Skill.all do %>
		  <%= check_box_tag "employee[skill_ids][]", skill.id, @employee.skills.include?(skill) %> <%= skill.name %><br/>
	  <% end %>
  </td></table>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :is_active %><br />
    <%= f.check_box :is_active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

