<h1>Activity "<%= @cost.activity.name %>" amount editing for "<%= link_to @project.name, project_path(@project.id) %>"</h1>

<%= form_for(@cost) do |f| %>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', project_activity_costs_path %>
