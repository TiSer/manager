<h1>Listing departments</h1>

<h3><%= link_to 'New Department', new_department_path %></h3>

<table>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Is active</th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.id %></td>
    <td><%= link_to department.name, department_path(department) %></td>
    <td><%= activity(department) %></td>
    <!-- <td><%#= link_to 'Show', department %></td> !-->
    <td><%= link_to 'Edit', edit_department_path(department) %></td>
    <td><%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
