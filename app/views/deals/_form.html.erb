<%= form_for(@deal) do |f| %>

	<%= f.error_messages %>

  <div class="field">
    <%= f.label :employee_id %><br />
    <%= f.select :employee_id, @participants %>
  </div>

  <%= f.hidden_field :milestone_id, :value => @milestone.id %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

