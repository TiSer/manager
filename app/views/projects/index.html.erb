<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Payment model</th>
    <th>Is active</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td align="center"><%= project.department.name %></td>
    <td><%= project.payment_model %></td>
    <td><%= project.is_active %></td>
    <td align="center"><%= project.customer_id %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Staffing', staffing_path(project) %></td>
  </tr>
<% end %>
</table>

